{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build AVX2 Example",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-mavx2",
                "-Wall",
                "-O2",
                "-g",
                "-o",
                "avx2_example",
                "main.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gcc"
        }
    ]
}
